<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="attachment_form_view_inherit" model="ir.ui.view">
        <field name="name">attachment.form.view.inherit</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form" />
        <field name="arch" type="xml">
            <field name="type" position="before">
                <field name="directory_id" context="{'default_directory_id': directory_id}" />
                <field name="document_tags" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" />
                <field name="sh_user_ids" widget="many2many_tags" />
                <field name="portal_user_ids" widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    placeholder="Select Portal Users..." />
                <field name="sh_share_url" widget="CopyClipboardChar" readonly="1" invisible="1" />
            </field>
            <xpath expr="//group" position="before">
                <div class="row">
                    <div class="col-11" />
                    <div class="col-1">
                        <button type="object" name="action_share_directory" class="btn btn-primary sh_share_btn" title="Share" string="Share" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="sh_document_management_kanban_view">
        <field name="name">ir.attachment</field>
        <field name="model">ir.attachment</field>
        <field name="priority">1000000</field>
        <field name="arch" type="xml">
            <kanban js_class="sh_documents_kanban">
                <field name="id"/>
                <field name="mimetype"/>
                <field name="type"/>
                <field name="create_uid"/>
                <field name="url"/>
                <field name="create_date"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-menu">
                        <button type="object" name="action_download" class="dropdown-item">Download</button>
                        <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                    </t>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record d-flex flex-column p-2">
                            <div class="d-flex align-items-start">
                                <div class="o_image o_image_thumbnail me-2" t-att-data-mimetype="record.mimetype.value" style="width:24px;height:24px;min-width:24px;"/>
                                <div class="flex-grow-1 overflow-hidden">
                                    <div t-att-title="record.name.raw_value" class="o_kanban_record_title text-truncate fw-bold">
                                        <field name="name"/>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2 text-muted small">
                                <span><field name="create_date" widget="date"/></span>
                                <field name="create_uid" widget="many2one_avatar_user"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="sh_document_management_tree_view" model="ir.ui.view">
        <field name="name">ir.attachment</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_tree"/>
        <field name="arch" type="xml">
            <field name="create_date" position="after">
                <button name="action_document_preview" string="Preview" class="btn btn-primary" type="object"/>
            </field>
        </field>
    </record>
</odoo>